{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "mcp-hub-next",
  "version": "0.1.0",
  "identifier": "com.modelcontextprotocol.mcp-hub-next",
  "build": {
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "mcp-hub-next",
        "width": 1100,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "create": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "deb", "appimage", "dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../.next": ".next",
      "../public": "public",
      "./resources": "resources"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}
